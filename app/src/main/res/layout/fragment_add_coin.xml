<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272F4C"
    tools:context=".AddCoin">

    <ImageView
        android:id="@+id/fragmentAddCoinBackground"
        android:layout_width="423dp"
        android:layout_height="907dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/addactivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addCoinFormBackground"
        android:layout_width="380dp"
        android:layout_height="475dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/box"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentAddCoinBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572" />

    <ImageView
        android:id="@+id/coinAddButton"
        android:layout_width="253dp"
        android:layout_height="75dp"
        android:src="@drawable/addbutton"
        app:layout_constraintBottom_toBottomOf="@+id/addCoinFormBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addCoinFormBackground"
        app:layout_constraintVertical_bias="0.812" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:src="@drawable/cryptolabel"
        app:layout_constraintBottom_toTopOf="@+id/coinQuantityBackground3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addCoinFormBackground"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/coinQuantityBackground3"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:layout_marginTop="376dp"
        android:src="@drawable/inputbox_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coinQuantityBackground"
        android:layout_width="285dp"
        android:layout_height="100dp"
        android:layout_marginTop="456dp"
        android:src="@drawable/inputbox_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/coinNameSpin"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:forceDarkAllowed="true"
        app:layout_constraintBottom_toTopOf="@+id/coinQuantityBackground"
        app:layout_constraintEnd_toEndOf="@+id/coinQuantityBackground3"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/coinQuantityBackground3"
        app:layout_constraintTop_toTopOf="@+id/coinQuantityBackground3"
        app:layout_constraintVertical_bias="0.657"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/coinQuantity"
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_marginTop="476dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>